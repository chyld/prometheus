<% if @auth.plan.nil? %>
  $('#submit_cancel_subscription').hide();
  $('#cancel_subscription_errors').empty().append('<%=j render partial: 'shared/generic_messages', locals: {messages: ['Your subscription has been cancelled'], css: 'success-text'} %>');
<% else %>
  $('#cancel_subscription_errors').empty().append('<%=j render partial: 'shared/generic_messages', locals: {messages: ['An error occurred while cancelling your subscription'], css: 'alert-text'} %>');
  $('#submit_cancel_subscription').attr('disabled', false);
  $('#submit_cancel_subscription').val('Cancel');
<% end %>
